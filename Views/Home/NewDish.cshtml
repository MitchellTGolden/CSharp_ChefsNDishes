@model Dish;
<h1>Add a Chef</h1>
<a href="/">Home</a>
<div class="col-5">
    <form asp-action="CreateNewDish" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for="DishName"></span>
            <label c asp-for="DishName"></label>
            <input class="form-control" asp-for="DishName">
        </div>
        <div class="form-group">
            <span asp-validation-for="Calories"></span>
            <label asp-for="Calories"></label>
            <input class="form-control" asp-for="Calories">
        </div>
        <div class="form-group">
            <span asp-validation-for="ChefId"></span>
            <label asp-for="ChefId"></label>
            <select class="form-control" asp-for="ChefId">
                @foreach (var chef in @ViewBag.ChefList)
                {
                <option value=@chef.ChefId>@chef.FirstName @chef.LastName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <span asp-validation-for="Tastiness"></span>
            <label asp-for="Tastiness"></label>
            <input class="form-control" asp-for="Tastiness">
        </div>
        <div class="form-group">
            <span asp-validation-for="Description"></span>
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description">
        </div>
        <input class="btn btn-primary" value="Add Dish" type="submit">
    </form>
</div>